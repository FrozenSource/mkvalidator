#!/bin/bash
. /etc/environment
echo "Searching $1 for mkv files"
find $1 -name '*.mkv' -print0 | 
    while IFS= read -r -d $'\0' line; do 
        echo "Validating $line"
        TXT=$(/usr/local/bin/mkvalidator --quiet "$line")
        STATUS=$?
        if [ $STATUS -ne 0 ]; then
          echo "Oh Bugger, errors found!"
          filename=$(basename "$fullfile")
          echo "$TXT" >> "$2/${filename}.log"
        fi
    done
